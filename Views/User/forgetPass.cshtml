        <div class="login-card">
   
            <h1>Forget Password</h1><br>
            <form action="~/User/confirmForgetPass" method="post">
            <input type="text" name="user" placeholder="Username">

                <select name="sec_question" class="form-control">
                    <option value="pet's name'">What is your pets's name?</option>
                    <option value="uncle's name'">What is your your favourite uncle's name?</option>
                    <option value="best friend">What is your best friend name?</option>
                    <option value="favourite author">What is the name of your favourite author?</option>
                </select>
                <br>
            <input type="text" name="secr_ans" placeholder="Secret Answer" />
            <input type="password" name="pass" placeholder="Password">

            <input type="submit" name="send" class="login login-submit" value="Send">
        </form>
                <div class="login-help">
                    @Html.ActionLink("Login", "login", "Home") • @Html.ActionLink("Forget Password", "forgetPass", "User")
                </div>
            <div>
            @if (ViewBag.forgetPassFailed == "true")
            {
               <p style="color:red; font-size:smaller">Use Correct Username and Answer.</p>
               <p style="color:red; font-size:smaller">Thank you!!</p>
            }
            </div>
        </div> 
       
  
